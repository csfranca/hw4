<div style="margin-bottom: 1em;"></div>

<h4 style="color: #4D4D4D;">New Post</h4>

<div style="margin-bottom: 1em;"></div>

<div class="mb-3" style="text-align: left;">
  <% if @current_user %>
    <%= form_with :model => @post do |form| %>
      <%= form.hidden_field "place_id" %>
      <p>
        <%= form.label "title", :class => "form-label" %>
        <%= form.text_field "title", :class => "form-control" %>
      </p>
      <p>
        <%= form.label "description", :class => "form-label" %>
        <%= form.text_field "description", :class => "form-control" %>
      </p>
      <p>
        <%= form.label "posted_on", :class => "form-label" %>
        <%= form.date_field "posted_on", :class => "form-control" %>
      </p>
      <p>
        <%= form.submit "Create post", :class => "btn btn-outline-dark" %>
      </p>
    <% end %>
  <% else %>
    <ul style="list-style: none; padding-left: 0;">
      <li>You first need to login!</li>
    </ul>
  <% end %>
</div>