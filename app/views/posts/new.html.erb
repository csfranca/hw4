<div style="margin-bottom: 1em;"></div>

<h4 style="color: #4D4D4D;">New Post</h4>

<div style="margin-bottom: 1em;"></div>

<div class="mb-3" style="text-align: left;">
  <% if @current_user %>
    <%= form_with :model => @post do |form| %>
      <%= form.hidden_field "place_id" %>
      
      <div class="mb-3">
        <%= form.label "title", :class => "form-label" %>
        <%= form.text_field "title", :class => "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= form.label "description", :class => "form-label" %>
        <%= form.text_field "description", :class => "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= form.label "posted_on", :class => "form-label" %>
        <%= form.date_field "posted_on", :class => "form-control" %>
      </div>
      
      <div class="mb-3">
      <%= form.label "uploaded_image", :class => "form-label" %>
      <%= form.file_field "uploaded_image", :class => "form-control" %>
      </div>
      
      <div class="mb-3">
        <%= form.submit "Create post", :class => "btn btn-outline-dark" %>
      </div>
    <% end %>
  <% else %>
    <ul style="list-style: none; padding-left: 0;">
      <li>You first need to login!</li>
    </ul>
  <% end %>
</div>