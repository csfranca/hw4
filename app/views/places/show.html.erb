<!-- Place details page -->

<div style="margin-bottom: 1em;"></div>

<h1 style="color: #B076FF;"><%= @place["name"] %></h1>

<div style="margin-bottom: 1em;"></div>

<h4 style="color: #4D4D4D;">My journal entries</h4>

<div style="margin-bottom: 1em;"></div>

<div class="row">
  <% for post in @posts %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card">
        <% if post.uploaded_image.attached? %>
          <%= image_tag url_for(post.uploaded_image), class: "card-img-top img-fluid" %>
        <% elsif post["image"].present? %>
          <%= image_tag post["image"], class: "card-img-top img-fluid" %>
        <% else %>
          <img src="placeholder.jpg" class="card-img-top img-fluid" alt="Placeholder Image">
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post["title"] %></h5>
          <p class="card-text">
            <%= post["posted_on"] %><br>
            <%= post["description"] %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark">New Post</a>
</p>

<p>
  <a href="/places" class="btn btn-outline-dark">Back to All Places</a>
</p>
